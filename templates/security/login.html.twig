{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
        {% block stylesheets %}
            {{ encore_entry_link_tags('login') }}
        {% endblock %}
{% block body %}

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <div class="container px-4 py-5 mx-auto">
        <div class="card card0">
            <div class="d-flex flex-lg-row flex-column-reverse">
                <div class="card card1">
                    <div class="row justify-content-center my-auto">
                        <div class="col-md-8 col-10 my-5">
                            {#<div class="row justify-content-center px-3 mb-3"> <img id="logo" src="" alt="Image not found"> </div>#}
                            <h3 class="mb-5 text-center heading">Litle</h3>
                            <h6 class="msg-info">Please login to your account</h6>
                            <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}
                            <div class="form-group"> <label class="form-control-label text-muted" for="inputEmail" for="inputUsername">Username</label> <input type="text" placeholder="Username or email" class="form-control" value="{{ last_username }}" name="username" id="inputUsername" autocomplete="username" required autofocus></div>
                            <div class="form-group"> <label class="form-control-label text-muted" for="inputPassword">Password</label> <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Enter password" autocomplete="current-password" required></div>
                            <div class="row justify-content-center my-3 px-3"> <button class="btn-block btn-color">Login to Litle</button> </div>
                            <div class="row justify-content-center my-2"> <a href="#"><small class="text-muted">Forgot Password?</small></a> </div>
                            <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                            >
                            </form>
                        </div>
                    </div>
                    <div class="bottom text-center mb-5">
                        <p href="#" class="sm-text mx-auto mb-3">Don't have an account?      <a class="btn btn-white ml-2" href="/user/new">Create new</a></p>
                    </div>
                </div>
                <div class="card card2">
                    <div class="my-auto mx-md-5 px-md-5 right">
                        <h3 class="text-white">We are more than just a reddit copy</h3> <small class="text-white">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
{% endblock %}
